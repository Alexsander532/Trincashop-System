# Copie este arquivo para application-dev.yml e preencha com suas credenciais
server:
  port: 8080

spring:
  datasource:
    url: jdbc:postgresql://SEU_HOST_NEON/neondb?sslmode=require
    username: SEU_USERNAME
    password: SUA_SENHA
    driver-class-name: org.postgresql.Driver
    hikari:
      max-lifetime: 600000
      keepalive-time: 30000
      idle-timeout: 300000
      validation-timeout: 5000

  jpa:
    hibernate:
      ddl-auto: validate
    show-sql: true
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.PostgreSQLDialect

  flyway:
    enabled: true
    locations: classpath:db/migration/common,classpath:db/migration/dev
    baseline-on-migrate: true

jwt:
  secret: SUA_CHAVE_JWT_COM_PELO_MENOS_256_BITS
  expiration: 86400000

logging:
  level:
    com.trincashop: DEBUG
    org.springframework.security: DEBUG
    org.flywaydb: INFO
    org.hibernate.SQL: DEBUG

springdoc:
  api-docs:
    path: /v3/api-docs
  swagger-ui:
    path: /swagger-ui.html

management:
  endpoints:
    web:
      exposure:
        include: health,info,metrics
  endpoint:
    health:
      show-details: always
  info:
    env:
      enabled: true
